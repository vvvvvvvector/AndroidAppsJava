<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/title_home"
        android:layout_width="290dp"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="Money manager"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/add_button_home"
        android:layout_width="170dp"
        android:layout_height="50sp"
        android:layout_marginTop="100dp"
        android:text="Add expense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_home" />

    <Button
        android:id="@+id/see_button_home"
        android:layout_width="170dp"
        android:layout_height="50sp"
        android:layout_marginTop="70dp"
        android:text="Your expenses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_button_home" />

</androidx.constraintlayout.widget.ConstraintLayout>